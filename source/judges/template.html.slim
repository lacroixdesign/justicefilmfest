section#news.m-section.m-section-light-bg
  .l-constrained
    .l-judge-details

      .m-judge
        .l-judge-photo.judge--photo
          = image_tag "judges/#{judge.image}"
        h2 = judge.name
        - if judge.twitter
          h5 = link_to "@#{judge.twitter}", "https://twitter.com/#{judge.twitter}"

      .m-judge-bio
        p = judge.bio

      a.m-back(href='../#judges')← Back to Judges
